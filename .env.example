# Database Configuration
# Railway will automatically provide this when you add a PostgreSQL database
DATABASE_URL=postgresql://username:password@host:port/database

# Authentication Configuration
# Set a secure password for the admin user
AUTH_PASSWORD=your_secure_admin_password_here

# Session Configuration
# Generate a secure session secret using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_64_character_hex_session_secret_here

# Environment
NODE_ENV=production

# Port (Railway sets this automatically, don't set manually)
# PORT=5000